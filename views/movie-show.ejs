<div class="container">
	<h1><%= movie.Title %> <small><%= movie.Year %></small></h1>

	<a href="<%= '/movies/?q=' + q %>" class="btn btn-primary">&larr; Back to Search</a>
	<br><br>
	<div class="well">
	  <% 
	  	var rating = movie.imdbRating;
	  	var stars = Math.floor(rating/2);
	  	var newStar = "";

	  	if(stars == 1) {
	  		newStar = '<span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span><span class="glyphicon glyphicon-star-empty"></span><span class="glyphicon glyphicon-star-empty"></span><span class="glyphicon glyphicon-star-empty"></span>';
	  	}
	  	else if(stars == 2) {
	  		newStar = '<span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span><span class="glyphicon glyphicon-star-empty"></span><span class="glyphicon glyphicon-star-empty"></span>';
	  	}
	  	else if(stars == 3) {
	  		newStar = '<span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span><span class="glyphicon glyphicon-star-empty"></span>';
	  	}
	  	else if(stars == 4) {
	  		newStar = '<span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span>';
	  	}
	  	else if(stars == 5) {
	  		newStar = '<span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span>';
	  	}
	  	else {
	  		newStar = "No Rating";
	  	}
	  %>
	  <p><small>IMDB Rating:</small> <%- newStar %></p>
	  <p><%= movie.Plot %></p>
	</div>
</div>